<Window x:Class="WrapPanelWpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WrapPanelWpfApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Width" Value="150"></Setter>
            </Style>
        </Grid.Resources>
        <WrapPanel Margin="20,20,0,0">
            <Button Content="B1"></Button>
        <Button Content="B2"></Button>
        <Button Content="B3"></Button>
        <Button Content="B4"></Button>
    </WrapPanel>
        <WrapPanel Margin="20,60,0,0">
        <Button Content="B5"></Button>
        <Button Content="B6"></Button>
    </WrapPanel>
    </Grid>
</Window>
